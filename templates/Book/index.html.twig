{% for book in books %}
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">{{ book.name }}</h5>
			{% for category in book.categories %}
				<p class="card-text">{{ category.name }}</p>
			{% endfor %}
			{% if book.author %}
				<p class="card-text">{{ book.author.name }}</p>
			{% else %}
				<p class="card-text">Auteur inconnu</p>
			{% endif %}
			<button type="button" class="btn btn-primary" onclick="window.location.href='/livres/{{ book.id }}/update'">Modifier</button>
			<button type="button" class="btn btn-danger" onclick="window.location.href='/livres/{{ book.id }}/delete'">Supprimer</button>
		</div>
	</div>
{% endfor %}

